<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- === Console Appender (clean, short errors) === -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- %ex{1} = only first line of exceptions -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg %ex{1}%n</pattern>
        </encoder>
    </appender>

    <!-- === File Appender (full stacktrace) === -->
    <appender name="FULL_ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rolling -->
            <fileNamePattern>logs/errors-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg %ex%n</pattern>
        </encoder>
    </appender>

    <!-- === Logger overrides (optional, clean SQL & Spring noise) === -->
    <logger name="org.hibernate.SQL" level="OFF"/>
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="OFF"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="OFF"/>
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.apache.catalina.core.ContainerBase.[Catalina].[localhost].[/]" level="ERROR"/>

    <!-- === Root logger === -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FULL_ERROR_FILE"/>
    </root>

</configuration>
